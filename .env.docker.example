# Docker Compose Environment Variables
# Copy this file to .env.docker and update with your actual values
# Load with: docker-compose --env-file .env.docker up

# PostgreSQL Configuration
POSTGRES_USER=roleready
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=roleready_db

# Database URL (used by API services)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://roleready:CHANGE_THIS_TO_STRONG_PASSWORD@postgres:5432/roleready_db

# JWT Secret (must be strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_64_CHAR_HEX_STRING

# CORS Origin (optional, defaults to http://localhost:3000)
CORS_ORIGIN=http://localhost:3000

# CSRF Secret (for CSRF protection)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CSRF_SECRET=CHANGE_THIS_TO_32_CHAR_HEX_STRING
