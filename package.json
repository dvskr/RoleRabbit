{
  "name": "roleready-fullstack",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:api\" \"npm run dev:python\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:python": "cd apps/api-python && python start.py",
    "build": "turbo run build",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && npm run build",
    "lint": "turbo run lint",
    "type-check": "cd apps/web && npx tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "cd apps/api && npm test",
    "test:web": "cd apps/web && npm test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:smoke": "playwright test --grep @smoke",
    "test:security": "playwright test test/security",
    "test:load": "k6 run test/performance/*.load.js",
    "test:stress": "k6 run test/performance/*.stress.js",
    "test:packages": "npm test --workspaces --if-present",
    "db:migrate": "cd apps/web && npx drizzle-kit push",
    "db:seed": "cd apps/web && tsx src/database/seed.ts",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "queue:clean": "cd apps/web && tsx src/lib/queue/scripts/clean-queues.ts",
    "rotate-secrets": "tsx scripts/rotate-secrets.ts",
    "cdn:purge-all": "cd apps/web && tsx src/lib/cdn/scripts/purge-all.ts",
    "install:all": "npm install && cd apps/web && npm install && cd ../api && npm install && cd ../api-python && pip install -r requirements.txt",
    "start": "node start-backends.js"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "concurrently": "^8.2.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "@playwright/test": "^1.40.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
