# ============================================================================
# RoleRabbit Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values

# ----------------------------------------------------------------------------
# Supabase Configuration (Required)
# ----------------------------------------------------------------------------
# Get these from your Supabase project dashboard: https://supabase.com/dashboard

# Public Supabase URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Anonymous/Public Key (safe to expose to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (NEVER expose to client, server-side only)
# Used for admin operations like creating storage buckets
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ----------------------------------------------------------------------------
# Deployment & Storage Configuration
# ----------------------------------------------------------------------------
# Supabase Storage bucket name for portfolio deployments
SUPABASE_STORAGE_BUCKET=portfolios

# Maximum file size for uploads (in bytes) - default 50MB
SUPABASE_STORAGE_MAX_FILE_SIZE=52428800

# ----------------------------------------------------------------------------
# DNS Provider Configuration (Optional)
# ----------------------------------------------------------------------------
# Choose ONE of the following DNS providers:

# Option 1: Cloudflare (Recommended)
# CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
# CLOUDFLARE_ZONE_ID=your-zone-id

# Option 2: Vercel DNS
# VERCEL_TOKEN=your-vercel-token

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# Base URL for your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Base domain for subdomain portfolios
NEXT_PUBLIC_BASE_DOMAIN=rolerabbit.com

# ----------------------------------------------------------------------------
# Redis Configuration (Sections 2.12, 2.14)
# ----------------------------------------------------------------------------
# Option 1: Upstash Redis (Recommended - Serverless, no infrastructure)
# Get from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Option 2: Traditional Redis (Self-hosted or managed)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ----------------------------------------------------------------------------
# Security & Rate Limiting
# ----------------------------------------------------------------------------
# CSRF token secret
CSRF_SECRET=your-random-secret-key-here

# ----------------------------------------------------------------------------
# SSL/TLS Configuration (Optional)
# ----------------------------------------------------------------------------
# Email for Let's Encrypt SSL certificate notifications
LETSENCRYPT_EMAIL=admin@yourdomain.com

# Let's Encrypt environment: production or staging
LETSENCRYPT_ENV=staging

# ----------------------------------------------------------------------------
# Analytics & IP Geolocation (Section 2.13)
# ----------------------------------------------------------------------------
# Choose ONE of the following IP geolocation providers:

# Option 1: ipapi.co (Recommended - Free tier: 1000 requests/day)
# No API key needed for free tier, optional for paid tier
# IPAPI_KEY=your-ipapi-key

# Option 2: ipstack.com (Free tier: 100 requests/month)
# IPSTACK_KEY=your-ipstack-key

# Option 3: ipgeolocation.io (Free tier: 1000 requests/day)
# IPGEOLOCATION_KEY=your-ipgeolocation-key

# ----------------------------------------------------------------------------
# Webhooks & Notifications (Section 2.12, 2.13)
# ----------------------------------------------------------------------------
# Webhook URL for deployment notifications (optional)
# DEPLOYMENT_WEBHOOK_URL=https://your-app.com/webhooks/deployment

# Email service for notifications (choose one)
# Option 1: Resend (Recommended)
# RESEND_API_KEY=your-resend-api-key

# Option 2: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Option 3: Use Supabase Edge Function for email
# (No config needed, handled in Supabase)

# ----------------------------------------------------------------------------
# AI Generation (Optional)
# ----------------------------------------------------------------------------
# For AI-powered portfolio content generation
# ANTHROPIC_API_KEY=your-anthropic-api-key
# OPENAI_API_KEY=your-openai-api-key

# ----------------------------------------------------------------------------
# Image Optimization (Optional)
# ----------------------------------------------------------------------------
# Sharp image optimization settings
IMAGE_OPTIMIZATION_QUALITY=80
IMAGE_OPTIMIZATION_MAX_WIDTH=1920

# ----------------------------------------------------------------------------
# Development
# ----------------------------------------------------------------------------
NODE_ENV=development

# Enable debug logging
DEBUG=false
